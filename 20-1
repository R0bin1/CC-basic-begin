//return value function
#include <iostream>
using namespace std;

int largest(int a,int b,int c){
int d;
if(a>b&&a>c)
d=a;
else if(b>c&&b>a)
d=b;
else
d=c;
return c; 
}
int main(){
    int a,b,c;
       cin>>a>>b>>c;
       int great=largest(a,b,c);
       cout<<"largest is: "<<great;
return 0;
}
