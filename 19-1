//WAP to find the sum of even numbers from 1 to 100
#include <iostream>
using namespace std;
int main()
{
    int i, even, sum = 0;
    cout << "even numbers are :";
    for (i = 0; i <= 100; i++)
        if (i % 2 == 0)
        {
            even = i;
            cout << "\n"<< even;
            sum = sum + even;
        }
    cout << "\n sum of even is : " << sum;
    return 0;
}

//WAP to celsius to fahrenheit
#include <iostream>

using namespace std;

int main()
{
float c;
cout<<"enter value of celcius: ";
cin>>c;
float f=(c*9/5)+32;
    cout<<"celcius  into fahreheit is : "<<f;
    return 0;
}

//WAP to display the final grade obtained by a student after taking input for marks in 5 subjects
#include<iostream>
using namespace std;
int main()
{
    float eng,math,mec,ece,cse;
    cout<<"Enter the marks of all subjects\n";
    cin>>eng>>math>>mec>>ece>>cse;
    float grade=(eng+math+mec+ece+cse)/(25*5);
    
    cout<<"The final grade obtained by a student: "<<grade;


   return 0;
}

//largest among them 
#include<iostream>
using namespace std;
int main()
{int a,b,c;
cout<<"enter the value of a,b and c is";
cin>>a>>b>>c;
if(a>b&&a>c)
cout<<"\nlargest number is a i.e : "<<a;
else if(b>c&&b>a)
cout<<"\nlargest number is b i.e : "<<b;
else
cout<<"\nlargest number is c i.e : "<<c; 
    return 0;
}

//multiply of number upto the given limit
#include <iostream>

using namespace std;

int main()
{int n;

    cout<<"enter any number: ";
    cin>>n;
    cout<<"multiple of n integer is "<<n<<"=";
    for(int i=1;i<=50;i++)
    if(i%n==0)
    cout<<"\n"<<i;
  
    return 0;
}

//negative positive
#include<iostream>
using namespace std;
int main(){
    int a;
    cin>>a;
    if(a>0 && a!=0)
    cout<<"\n it is positive";
    else if(a<0 && a!=0)
    cout<<"\n it is negative";
    else
    cout<<"\n it is zero";
    return 0;
}

//WAP to check whether the entered integer is prime or composite
#include <iostream>
using namespace std;
int main()
{
        int i,n,c=0;
    cout << "Enter a number n: ";
    cin>>n;

    for (i=1;i<=n;i++)
    if(n%i==0)
        c=c+1;

        if (c==2)
        cout << "It is prime number";
        else
        cout<<"The number is COMPOSITE";


       

    return 0;
}

//product of given numbers
#include<iostream>
using namespace std;
int main()
{
    int a,b,c;
    cout<<"Input the three numbers: ";
    cin>>a>>b>>c;
    int product=a*b*c;
    cout<<"product of the numbers: "<<product;

}

//wap to reverse 
#include <iostream>

using namespace std;

int main()
{int n,x,rev=0;
    cout<<"Enter any number: ";
    cin>>n;
while(n!=0){
    x=n%10;
    rev=rev*10+x;
    n=n/10;
}
cout<<rev;
    return 0;
}


//Simple intrest
#include<iostream>
using namespace std;
int main()
{
    float p,t,r;
    cout<<"Input the principle time and rate: ";
    cin>>p>>t>>r;
    float simple_intrest=(p*t*r)/100;
    cout<<"Simple intrest : "<<simple_intrest;

}

//Swap with extra variable
#include<iostream>
using namespace std;
int main(){
    int a,b,temp;
    a=2;b=3;
    cout<<"the before swip result is :"<<a <<b;
    temp=a;
    a=b;
    b=temp;
    cout<<"\nthe swip result is :"<<a <<b;
    return 0;
}

//Swap without extra variable
//Swapping without temporary variable
#include <iostream>
using namespace std;
int main()
{
    int a,b;
    cout<<"\nEnter values of a and b:";
    cin>>a>>b;
    a=a+b;
    b=a-b;
    a=a-b;
    cout<<"\nValues after swapping are:"<<a<<" "<<b;
    return 0;
}


//Basic
#include<iostream>
using namespace std;
int main(){
    int a,b,c;
    cout<<"hello world";
    cout<<"\nEnter the value:";
    cin>>a>>b;//input as scanf
    c=a+b;
    cout<<"\nThe sum is: "<<c;//output as printf

    return 0;
}
